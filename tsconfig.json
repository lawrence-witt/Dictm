{
	"compilerOptions": {
		"outDir": "./build/",
		"sourceMap": true,
		"noImplicitAny": true,
		"target": "es5",
		"lib": ["ES2019", "DOM"],
		"module": "ESNext",
		"jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
		"moduleResolution": "node",
		"downlevelIteration": true,
		"strict": true
	},
	"exclude": ["offcuts/**/*"]
}